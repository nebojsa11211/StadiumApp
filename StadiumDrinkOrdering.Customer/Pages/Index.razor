@page "/"

<PageTitle>Stadium Drinks</PageTitle>

<div class="hero-section text-center py-5 mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
    <div class="container">
        <h1 class="display-4 mb-3">🏟️ Welcome to Stadium Drinks</h1>
        <p class="lead mb-4">Order your favorite drinks directly to your seat!</p>
        <a href="/menu" class="btn btn-light btn-lg me-3">
            <i class="bi bi-cup-straw"></i> Order Drinks
        </a>
        <a href="/orders" class="btn btn-outline-light btn-lg">
            <i class="bi bi-receipt"></i> My Orders
        </a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">🍺</span>
                    </div>
                    <h5 class="card-title">Wide Selection</h5>
                    <p class="card-text">Choose from beers, soft drinks, water, coffee, and more!</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">🚀</span>
                    </div>
                    <h5 class="card-title">Fast Delivery</h5>
                    <p class="card-text">Get your drinks delivered straight to your seat during the game!</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">📱</span>
                    </div>
                    <h5 class="card-title">Easy Ordering</h5>
                    <p class="card-text">Simple interface - just enter your ticket number and order!</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 offset-md-3 text-center">
            <h3>How it works</h3>
            <ol class="list-unstyled">
                <li class="mb-3">
                    <span class="badge bg-primary rounded-circle me-3">1</span>
                    Browse our menu and add drinks to your cart
                </li>
                <li class="mb-3">
                    <span class="badge bg-primary rounded-circle me-3">2</span>
                    Enter your ticket number to verify your seat
                </li>
                <li class="mb-3">
                    <span class="badge bg-primary rounded-circle me-3">3</span>
                    Place your order and track its progress
                </li>
                <li class="mb-3">
                    <span class="badge bg-primary rounded-circle me-3">4</span>
                    Enjoy your drinks delivered right to your seat!
                </li>
            </ol>
        </div>
    </div>
</div>
