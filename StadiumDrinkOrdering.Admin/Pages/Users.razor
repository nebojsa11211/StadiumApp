@page "/users"

<PageTitle>User Management - Stadium Admin</PageTitle>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2">User Management</h1>
            <p class="text-muted">Manage system users and their roles</p>
        </div>
        <div>
            <button class="btn btn-primary me-2" @onclick="ShowCreateUserModal" id="admin-users-create-btn">
                <i class="oi oi-plus me-2"></i>Add User
            </button>
            <button class="btn btn-outline-secondary" @onclick="RefreshData" disabled="@isLoading" id="admin-users-refresh-btn">
                <i class="oi oi-reload @(isLoading ? "spin" : "")"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Users</h6>
                            <h3 class="mb-0">@totalUsers</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="oi oi-people fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Active Users</h6>
                            <h3 class="mb-0">@activeUsers</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="oi oi-circle-check fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">New This Month</h6>
                            <h3 class="mb-0">@newUsersThisMonth</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="oi oi-person fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Admin Users</h6>
                            <h3 class="mb-0">@adminUsers</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="oi oi-shield fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Role Filter</label>
                    <select class="form-select" @bind="selectedRole" @bind:after="FilterUsers">
                        <option value="">All Roles</option>
                        <option value="Admin">Admin</option>
                        <option value="Staff">Staff</option>
                        <option value="Customer">Customer</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Status Filter</label>
                    <select class="form-select" @bind="selectedStatus" @bind:after="FilterUsers">
                        <option value="">All Statuses</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Search Users</label>
                    <input type="text" class="form-control" placeholder="Search by name, username, or email"
                           @bind="searchTerm" @oninput="FilterUsers" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button class="btn btn-outline-secondary" @onclick="ClearFilters" id="admin-users-clear-filters-btn">Clear Filters</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading users...</p>
        </div>
    }
    else
    {
        <!-- Users Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Users (@filteredUsers.Count)</h5>
                @if (selectedUserIds.Any())
                {
                    <div class="btn-group">
                        <button class="btn btn-sm btn-success" @onclick="BulkActivate" id="admin-users-bulk-activate-btn">Activate Selected (@selectedUserIds.Count)</button>
                        <button class="btn btn-sm btn-warning" @onclick="BulkDeactivate" id="admin-users-bulk-deactivate-btn">Deactivate Selected</button>
                    </div>
                }
            </div>
            <div class="card-body">
                @if (filteredUsers?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" class="form-check-input" @onchange="ToggleSelectAll" />
                                    </th>
                                    <th>User #</th>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in filteredUsers.Take(50))
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" class="form-check-input"
                                                   @onchange="@((e) => ToggleUserSelection(user.Id, (bool)e.Value!))" />
                                        </td>
                                        <td>#@user.Id</td>
                                        <td>@user.Name</td>
                                        <td>@user.Username</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <span class="badge @GetRoleBadgeClass(user.Role)">@user.Role</span>
                                        </td>
                                        <td>
                                            <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                                @(user.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" @onclick="@(() => EditUser(user))" id="admin-users-edit-btn-@user.Id" title="Edit User">
                                                    <i class="oi oi-pencil"></i>
                                                </button>
                                                <button class="btn btn-outline-info" @onclick="@(() => ResetPassword(user.Id))" id="admin-users-reset-password-btn-@user.Id" title="Reset Password">
                                                    <i class="oi oi-key"></i>
                                                </button>
                                                @if (user.IsActive)
                                                {
                                                    <button class="btn btn-outline-warning" @onclick="@(() => DeactivateUser(user.Id))" id="admin-users-deactivate-btn-@user.Id" title="Deactivate User">
                                                        <i class="oi oi-ban"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-success" @onclick="@(() => ActivateUser(user.Id))" id="admin-users-activate-btn-@user.Id" title="Activate User">
                                                        <i class="oi oi-circle-check"></i>
                                                    </button>
                                                }
                                                @if (CanDeleteUser(user))
                                                {
                                                    <button class="btn btn-outline-danger" @onclick="@(() => DeleteUser(user.Id))" id="admin-users-delete-btn-@user.Id" title="Delete User">
                                                        <i class="oi oi-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (filteredUsers.Count > 50)
                    {
                        <div class="text-center mt-3">
                            <p class="text-muted">Showing first 50 users of @filteredUsers.Count total</p>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center p-4">
                        <i class="oi oi-info text-muted fs-1"></i>
                        <p class="text-muted mt-2">No users found matching your criteria</p>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Create User Modal -->
@if (showCreateModal)
{
    <div class="modal fade show" id="admin-users-modal" tabindex="-1" role="dialog" style="display: block;" aria-modal="true" aria-labelledby="admin-users-modal-title">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="admin-users-modal-title">Add New User</h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateModal" id="admin-users-modal-close-btn" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="newUser" OnValidSubmit="CreateUser">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Username *</label>
                            <InputText class="form-control" @bind-Value="newUser.Username" id="admin-users-modal-username-input" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email *</label>
                            <InputText class="form-control" @bind-Value="newUser.Email" type="email" id="admin-users-modal-email-input" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <InputText class="form-control" @bind-Value="newUser.FirstName" id="admin-users-modal-name-input" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password *</label>
                            <InputText class="form-control" @bind-Value="newUser.Password" type="password" id="admin-users-modal-password-input" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role *</label>
                            <InputSelect class="form-select" @bind-Value="newUser.Role" id="admin-users-modal-role-select">
                                <option value="Customer">Customer</option>
                                <option value="Staff">Staff</option>
                                <option value="Admin">Admin</option>
                            </InputSelect>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseCreateModal" id="admin-users-modal-cancel-btn">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isCreatingUser" id="admin-users-modal-submit-btn">
                                @if (isCreatingUser)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Create User
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}


