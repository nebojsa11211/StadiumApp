        justify-content: center;
    }

    .info-panel-content {
        padding: 0.75rem 1rem;
    }

    .stadium-stats {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem;
        background: #f8f9fa;
        border-radius: 6px;
        border-left: 4px solid #007bff;
    }

    .stat-icon {
        font-size: 1.25rem;
        width: 35px;
        text-align: center;
