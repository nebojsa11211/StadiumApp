        border-top: 1px solid #dee2e6;
    }

    .availability-section h6 {
        margin-bottom: 0.75rem;
        color: #495057;
        font-weight: 600;
    }

    .availability-stats {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .availability-item {
        display: flex;
