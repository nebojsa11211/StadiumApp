@page "/order-confirmation/{orderId}"
@using StladiumDrinkOrdering.Customer.Services
@inject ApiService ApiService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Order Confirmation - Stadium Drinks</PageTitle>

<div class="container py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary mb-3" style="width: 3rem; height: 3rem;"></div>
            <h4>Loading your order details...</h4>
            <p class="text-muted">Please wait while we retrieve your ticket information.</p>
        </div>
    }
    else if (orderConfirmation == null)
    {
        <div class="text-center py-5">
            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
            <h4>Order Not Found</h4>
            <p class="text-muted">We couldn't find your order. Please check your order ID and try again.</p>
            <a href="/events" class="btn btn-primary">Browse Events</a>
        </div>
    }
    else
    {
        <!-- Success Header -->
        <div class="row">
            <div class="col-12 text-center mb-4">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h1 class="text-success">Order Confirmed!</h1>
                <p class="lead">Thank you for your purchase. Your tickets are ready!</p>
            </div>
        </div>

        <!-- Order Summary Card -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="fas fa-receipt me-2"></i>Order Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Order ID:</strong></div>
                            <div class="col-sm-9"><code>@orderConfirmation.OrderId</code></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Customer:</strong></div>
                            <div class="col-sm-9">@orderConfirmation.CustomerName</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Event:</strong></div>
                            <div class="col-sm-9">@orderConfirmation.EventName</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Event Date:</strong></div>
                            <div class="col-sm-9">@orderConfirmation.EventDate.ToString("dddd, MMMM dd, yyyy 'at' HH:mm")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Order Date:</strong></div>
                            <div class="col-sm-9">@orderConfirmation.OrderDate.ToString("MMM dd, yyyy 'at' HH:mm")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Payment Status:</strong></div>
                            <div class="col-sm-9">
                                <span class="badge bg-success">@orderConfirmation.PaymentStatus</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3"><strong>Total Amount:</strong></div>
                            <div class="col-sm-9">
                                <strong class="text-success h5">$@orderConfirmation.TotalAmount.ToString("F2")</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tickets Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-tickets me-2"></i>Your Tickets (@orderConfirmation.Tickets.Count)</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var ticket in orderConfirmation.Tickets)
                            {
                                <div class="col-lg-6 mb-3">
                                    <div class="card border-primary">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h6 class="card-title mb-1">@ticket.SeatCode</h6>
                                                    <p class="card-text text-muted small mb-0">@ticket.SectionName</p>
                                                </div>
                                                <div class="text-end">
                                                    <strong class="text-primary">$@ticket.Price.ToString("F2")</strong>
                                                </div>
                                            </div>
                                            <div class="text-center mt-3 pt-3 border-top">
                                                <div class="qr-code mb-2" style="font-family: monospace; font-size: 12px; background: #f8f9fa; padding: 10px; border-radius: 4px;">
                                                    @ticket.QRCode
                                                </div>
                                                <small class="text-muted">Ticket: @ticket.TicketNumber</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="text-center mb-4">
                    <button class="btn btn-success btn-lg me-3" @onclick="SendTicketsByEmail">
                        <i class="fas fa-envelope me-2"></i>Email Tickets
                    </button>
                    <button class="btn btn-primary btn-lg me-3" @onclick="DownloadTickets">
                        <i class="fas fa-download me-2"></i>Download PDF
                    </button>
                    <button class="btn btn-outline-primary" @onclick="PrintTickets">
                        <i class="fas fa-print me-2"></i>Print Tickets
                    </button>
                </div>

                <!-- Important Information -->
                <div class="alert alert-info">
                    <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Important Information</h5>
                    <ul class="mb-0">
                        <li><strong>Present QR Code:</strong> Show the QR code on your phone or printed ticket at the venue entrance.</li>
                        <li><strong>Arrive Early:</strong> We recommend arriving 30-45 minutes before the event starts.</li>
                        <li><strong>Valid ID Required:</strong> Bring a government-issued photo ID for verification.</li>
                        <li><strong>Email Confirmation:</strong> A confirmation email has been sent to your registered email address.</li>
                        <li><strong>Customer Support:</strong> Contact us at <a href="mailto:support@stadiumdrinks.com">support@stadiumdrinks.com</a> for any issues.</li>
                    </ul>
                </div>

                <!-- Continue Shopping -->
                <div class="text-center">
                    <a href="/events" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-calendar-alt me-2"></i>Browse More Events
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public string OrderId { get; set; } = string.Empty;
    
    private OrderConfirmationDto? orderConfirmation;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrderConfirmation();
    }

    private async Task LoadOrderConfirmation()
    {
        try
        {
            isLoading = true;
            orderConfirmation = await ApiService.GetOrderConfirmationAsync(OrderId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading order confirmation: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SendTicketsByEmail()
    {
        try
        {
            // This would typically call an API endpoint to send tickets via email
            await JSRuntime.InvokeVoidAsync("alert", "Tickets have been sent to your email address!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error sending tickets: {ex.Message}");
        }
    }

    private async Task DownloadTickets()
    {
        try
        {
            // This would typically generate and download a PDF
            await JSRuntime.InvokeVoidAsync("alert", "PDF download will be available soon!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error downloading tickets: {ex.Message}");
        }
    }

    private async Task PrintTickets()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("window.print");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error printing tickets: {ex.Message}");
        }
    }
}

<style>
    .qr-code {
        font-family: 'Courier New', monospace;
        letter-spacing: -1px;
        word-break: break-all;
    }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .card-title {
        color: #0d6efd;
        font-weight: 600;
    }

    .alert-info {
        border-left: 4px solid #0dcaf0;
    }

    .badge {
        font-size: 0.9em;
        padding: 0.5em 0.75em;
    }

    @@media print {
        .btn, .alert, nav, header, footer {
            display: none !important;
        }
        
        .card {
            border: 2px solid #000 !important;
            break-inside: avoid;
        }
        
        .qr-code {
            border: 1px solid #000;
        }
    }

    @@media (max-width: 768px) {
        .container {
            padding-left: 15px;
            padding-right: 15px;
        }
        
        .btn-lg {
            width: 100%;
            margin-bottom: 10px;
        }
        
        .me-3 {
            margin-right: 0 !important;
        }
    }
</style>