@using StadiumDrinkOrdering.Shared.DTOs
@using StadiumDrinkOrdering.Shared.Models
@inherits ChangePasswordModalBase

<div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" id="change-password-modal">
    <div class="modal-dialog" id="change-password-modal-dialog">
        <div class="modal-content" id="change-password-modal-content">
            <div class="modal-header" id="change-password-modal-header">
                <h5 class="modal-title" id="change-password-modal-title">Change Password: @User?.Username</h5>
                <button type="button" class="btn-close" @onclick="OnCancel" id="change-password-modal-close-btn"></button>
            </div>
            <EditForm Model="@changePasswordDto" OnValidSubmit="@HandleValidSubmit" id="change-password-form">
                <DataAnnotationsValidator />
                <div class="modal-body" id="change-password-modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" id="change-password-error-alert">@errorMessage</div>
                    }
                    
                    <div class="alert alert-info" id="change-password-user-info">
                        <small id="change-password-user-details">
                            <strong>User:</strong> @User?.Username (@User?.Email)<br/>
                            <strong>Role:</strong> @User?.Role
                        </small>
                    </div>
                    
                    <div class="mb-3" id="change-password-new-password-group">
                        <label for="new-password" class="form-label" id="change-password-new-password-label">New Password *</label>
                        <InputText id="new-password" type="password" class="form-control" @bind-Value="changePasswordDto.NewPassword" />
                        <ValidationMessage For="@(() => changePasswordDto.NewPassword)" />
                        <div class="form-text" id="change-password-help-text">Minimum 6 characters required.</div>
                    </div>
                    
                    <div class="mb-3" id="change-password-confirm-group">
                        <label for="confirm-new-password" class="form-label" id="change-password-confirm-label">Confirm New Password *</label>
                        <InputText id="confirm-new-password" type="password" class="form-control" @bind-Value="changePasswordDto.ConfirmNewPassword" />
                        <ValidationMessage For="@(() => changePasswordDto.ConfirmNewPassword)" />
                    </div>
                    
                    <div class="alert alert-warning" id="change-password-security-notice">
                        <small id="change-password-security-text">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Security Notice:</strong> The user will need to log in again with the new password. 
                            Make sure to communicate the new password securely.
                        </small>
                    </div>
                </div>
                <div class="modal-footer" id="change-password-modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="OnCancel" id="change-password-cancel-btn">Cancel</button>
                    <button type="submit" class="btn btn-warning" disabled="@isSubmitting" id="change-password-submit-btn">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" id="change-password-submit-spinner"></span>
                        }
                        Change Password
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

