@page "/"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<div class="hero-section text-center py-5 mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;" id="customer-index-hero">
    <div class="container" id="customer-index-hero-container">
        <h1 class="display-4 mb-3" id="customer-index-welcome-title">🏟️ @Localizer["WelcomeTitle"]</h1>
        <p class="lead mb-4" id="customer-index-welcome-subtitle">@Localizer["WelcomeSubtitle"]</p>
        <a href="/menu" class="btn btn-light btn-lg me-3" id="customer-index-order-drinks-btn">
            <i class="bi bi-cup-straw"></i> @Localizer["OrderDrinksButton"]
        </a>
        <a href="/orders" class="btn btn-outline-light btn-lg" id="customer-index-my-orders-btn">
            <i class="bi bi-receipt"></i> @Localizer["MyOrdersButton"]
        </a>
    </div>
</div>

<div class="container" id="customer-index-features-container">
    <div class="row" id="customer-index-features-row">
        <div class="col-md-4 mb-4" id="customer-index-feature-1">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">🍺</span>
                    </div>
                    <h5 class="card-title">@Localizer["WideSelectionTitle"]</h5>
                    <p class="card-text">@Localizer["WideSelectionDescription"]</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4" id="customer-index-feature-2">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">🚀</span>
                    </div>
                    <h5 class="card-title">@Localizer["FastDeliveryTitle"]</h5>
                    <p class="card-text">@Localizer["FastDeliveryDescription"]</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4" id="customer-index-feature-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">📱</span>
                    </div>
                    <h5 class="card-title">@Localizer["EasyOrderingTitle"]</h5>
                    <p class="card-text">@Localizer["EasyOrderingDescription"]</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5" id="customer-index-how-it-works-row">
        <div class="col-md-6 offset-md-3 text-center" id="customer-index-how-it-works">
            <h3 id="customer-index-how-it-works-title">@Localizer["HowItWorksTitle"]</h3>
            <ol class="list-unstyled" id="customer-index-steps-list">
                <li class="mb-3">
                    <span class="badge bg-primary rounded-circle me-3">1</span>
                    @Localizer["Step1"]
                </li>
                <li class="mb-3">
                    <span class="badge bg-primary rounded-circle me-3">2</span>
                    @Localizer["Step2"]
                </li>
                <li class="mb-3">
                    <span class="badge bg-primary rounded-circle me-3">3</span>
                    @Localizer["Step3"]
                </li>
                <li class="mb-3">
                    <span class="badge bg-primary rounded-circle me-3">4</span>
                    @Localizer["Step4"]
                </li>
            </ol>
        </div>
    </div>
</div>
