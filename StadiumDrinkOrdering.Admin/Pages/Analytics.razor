@page "/analytics"
@using StadiumDrinkOrdering.Admin.Services
@using StadiumDrinkOrdering.Shared.DTOs
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Analytics</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">
                <i class="fas fa-chart-bar me-2"></i>Analytics Dashboard
            </h2>
            <p class="text-muted">Comprehensive overview of system performance, sales, and trends</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading analytics data...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @errorMessage
            <button type="button" class="btn btn-sm btn-outline-danger ms-2" @onclick="LoadAnalyticsData" id="admin-analytics-retry-btn">
                <i class="fas fa-redo me-1"></i>Retry
            </button>
        </div>
    }
    else
    {
        <!-- Placeholder for Future Analytics -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Analytics Dashboard</strong> - Advanced analytics features are currently in development.
                    Use the quick actions below to access available analytics and reports.
                </div>
            </div>
        </div>

        <!-- Available Events -->
        @if (availableEvents?.Any() == true)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-calendar me-2"></i>Available Events
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Event Name</th>
                                            <th>Date</th>
                                            <th>Location</th>
                                            <th class="text-center">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var evt in availableEvents.Take(10))
                                        {
                                            <tr>
                                                <td>@evt.Name</td>
                                                <td>@(evt.Date?.ToString("MMM dd, yyyy") ?? "TBD")</td>
                                                <td>@evt.Location</td>
                                                <td class="text-center">
                                                    @if (evt.IsActive)
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Inactive</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-tools me-2"></i>Analytics & Reports
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <button class="btn btn-outline-success w-100" @onclick="NavigateToCustomerAnalytics" id="admin-analytics-customer-analytics-btn">
                                    <i class="fas fa-users fa-2x d-block mb-2"></i>
                                    <small>Customer Analytics</small>
                                </button>
                            </div>
                            <div class="col-md-3 mb-3">
                                <button class="btn btn-outline-info w-100" @onclick="NavigateToEvents" id="admin-analytics-events-btn">
                                    <i class="fas fa-calendar fa-2x d-block mb-2"></i>
                                    <small>Event Management</small>
                                </button>
                            </div>
                            <div class="col-md-3 mb-3">
                                <button class="btn btn-outline-warning w-100" @onclick="NavigateToOrders" id="admin-analytics-orders-btn">
                                    <i class="fas fa-list fa-2x d-block mb-2"></i>
                                    <small>Order Reports</small>
                                </button>
                            </div>
                            <div class="col-md-3 mb-3">
                                <button class="btn btn-outline-secondary w-100" @onclick="NavigateToLogs" id="admin-analytics-logs-btn">
                                    <i class="fas fa-chart-line fa-2x d-block mb-2"></i>
                                    <small>System Logs</small>
                                </button>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex flex-wrap gap-2">
                            <button class="btn btn-outline-primary" @onclick="LoadAnalyticsData" disabled="@isLoading" id="admin-analytics-refresh-btn">
                                <i class="fas fa-sync-alt me-1"></i>Refresh Data
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>