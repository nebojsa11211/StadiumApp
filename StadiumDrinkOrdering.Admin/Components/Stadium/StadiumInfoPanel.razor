@using StadiumDrinkOrdering.Shared.DTOs

<div class="stadium-info-panel" id="stadium-info-panel">
    <div class="info-panel-header">
        <h4>üìä Stadium Information</h4>
        <button class="btn btn-sm btn-outline-secondary toggle-btn" @onclick="ToggleCollapse">
            @if (IsCollapsed)
            {
                <i class="bi bi-chevron-right"></i>
            }
            else
            {
                <i class="bi bi-chevron-left"></i>
            }
        </button>
    </div>

    @if (!IsCollapsed)
    {
        <div class="info-panel-content">
            @if (Summary != null)
            {
                <div class="stadium-stats">
                    <div class="stat-item">
                        <div class="stat-icon">üèüÔ∏è</div>
                        <div class="stat-content">
                            <div class="stat-label">Total Capacity</div>
                            <div class="stat-value">@Summary.TotalSeats.ToString("N0")</div>
                        </div>
                    </div>

                    <div class="stat-item">
                        <div class="stat-icon">üéØ</div>
                        <div class="stat-content">
                            <div class="stat-label">Tribunes</div>
                            <div class="stat-value">@Summary.TotalTribunes</div>
                        </div>
                    </div>

                    <div class="stat-item">
                        <div class="stat-icon">üîÑ</div>
                        <div class="stat-content">
                            <div class="stat-label">Rings</div>
                            <div class="stat-value">@Summary.TotalRings</div>
                        </div>
                    </div>

                    <div class="stat-item">
                        <div class="stat-icon">üì¶</div>
                        <div class="stat-content">
                            <div class="stat-label">Sectors</div>
                            <div class="stat-value">@Summary.TotalSectors</div>
                        </div>
                    </div>

                    @if (Summary.TotalSeats > 0)
                    {
                        <div class="availability-section">
                            <h6>Seat Availability</h6>
                            <div class="availability-stats">
                                <div class="availability-item available">
                                    <span class="availability-indicator"></span>
                                    <span>Available: @Summary.AvailableSeats.ToString("N0")</span>
                                </div>
                                <div class="availability-item occupied">
                                    <span class="availability-indicator"></span>
                                    <span>Occupied: @Summary.OccupiedSeats.ToString("N0")</span>
                                </div>
                            </div>

                            @if (Summary.TotalSeats > 0)
                            {
                                <div class="occupancy-bar">
                                    <div class="occupancy-fill" style="width: @(((double)Summary.OccupiedSeats / Summary.TotalSeats * 100).ToString("F1"))%"></div>
                                </div>
                                <div class="occupancy-percentage">
                                    @(((double)Summary.OccupiedSeats / Summary.TotalSeats * 100).ToString("F1"))% Occupied
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else if (IsLoading)
            {
                <div class="loading-state">
                    <div class="spinner-border spinner-border-sm" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="ms-2">Loading stadium information...</span>
                </div>
            }
            else
            {
                <div class="no-data-state">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>No Stadium Data</strong><br>
                        No stadium structure found. Please import stadium structure data first.
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
