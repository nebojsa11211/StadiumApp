@using StadiumDrinkOrdering.Shared.Constants
@namespace StadiumDrinkOrdering.Admin.Components.Stadium

@* East Stand unavailable areas - EXACT same as static SVG *@
<g class="stand-group east-stand" data-stand="east" id="stand-east">
    @foreach (var rect in HNKRijekaStadiumConstants.EAST_UNAVAILABLE)
    {
        <rect x="@rect.X" y="@rect.Y" width="@rect.Width" height="@rect.Height" 
              fill="#9E9E9E" 
              stroke="#757575" 
              stroke-width="2" 
              rx="6" 
              opacity="0.6" />
    }
</g>