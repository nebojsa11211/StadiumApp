@using StadiumDrinkOrdering.Shared.DTOs
@using System.Text
@inherits CustomerDetailModalBase

<div class="modal fade" id="customerDetailModal" tabindex="-1" aria-labelledby="customerDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="customerDetailModalLabel">
                    <i class="fas fa-user-circle me-2"></i>
                    @if (customerDetail != null)
                    {
                        <span>@customerDetail.CustomerName</span>
                    }
                    else
                    {
                        <span>Customer Details</span>
                    }
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (isLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading customer details...</p>
                    </div>
                }
                else if (errorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @errorMessage
                        <button type="button" class="btn btn-sm btn-outline-danger ms-2" @onclick="() => LoadCustomerDetails(currentCustomerEmail)">
                            <i class="fas fa-redo me-1"></i>Retry
                        </button>
                    </div>
                }
                else if (customerDetail != null)
                {
                    <!-- Customer Overview Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="card bg-primary text-white h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-euro-sign fa-2x mb-2"></i>
                                    <div class="fs-4 fw-bold">€@customerDetail.Summary.TotalSpent.ToString("N2")</div>
                                    <div class="small">Total Spent</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-success text-white h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-ticket-alt fa-2x mb-2"></i>
                                    <div class="fs-4 fw-bold">@customerDetail.Summary.TotalTickets</div>
                                    <div class="small">Tickets Purchased</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-info text-white h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                                    <div class="fs-4 fw-bold">@customerDetail.Summary.TotalEvents</div>
                                    <div class="small">Events Attended</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-warning text-white h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-glass-martini fa-2x mb-2"></i>
                                    <div class="fs-4 fw-bold">@customerDetail.Summary.TotalDrinkOrders</div>
                                    <div class="small">Drink Orders</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Customer Information</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Full Name</label>
                                                <p class="mb-1">@customerDetail.CustomerName</p>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Email Address</label>
                                                <p class="mb-1">@customerDetail.CustomerEmail</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">First Purchase</label>
                                                <p class="mb-1">@customerDetail.Summary.FirstPurchase.ToString("MMM dd, yyyy")</p>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Last Purchase</label>
                                                <p class="mb-1">@customerDetail.Summary.LastPurchase.ToString("MMM dd, yyyy")</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Spending Breakdown -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Spending by Category</h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                                            <span>Tickets</span>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold">€@customerDetail.Summary.TicketSpending.ToString("N2")</div>
                                            <div class="small text-muted">@(customerDetail.Summary.TotalSpent > 0 ? (customerDetail.Summary.TicketSpending / customerDetail.Summary.TotalSpent * 100).ToString("F1") : "0")%</div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-success rounded-circle me-3" style="width: 12px; height: 12px;"></div>
                                            <span>Drinks</span>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold">€@customerDetail.Summary.DrinkSpending.ToString("N2")</div>
                                            <div class="small text-muted">@(customerDetail.Summary.TotalSpent > 0 ? (customerDetail.Summary.DrinkSpending / customerDetail.Summary.TotalSpent * 100).ToString("F1") : "0")%</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>Averages</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Avg Ticket Price</label>
                                        <p class="mb-1">€@customerDetail.Summary.AverageTicketPrice.ToString("N2")</p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Avg Drink Order</label>
                                        <p class="mb-1">€@customerDetail.Summary.AverageDrinkOrderValue.ToString("N2")</p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Customer Since</label>
                                        <p class="mb-1">@((DateTime.Now - customerDetail.Summary.FirstPurchase).Days) days</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Purchases -->
                    @if (customerDetail.TicketPurchases?.Any() == true)
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>Recent Ticket Purchases</h6>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Purchase Date</th>
                                                <th>Event</th>
                                                <th>Section</th>
                                                <th>Seat</th>
                                                <th class="text-end">Price</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var purchase in customerDetail.TicketPurchases.Take(5))
                                            {
                                                <tr>
                                                    <td><small>@purchase.PurchaseDate.ToString("MMM dd, yyyy")</small></td>
                                                    <td><small>@purchase.EventName</small></td>
                                                    <td><small>@purchase.SectionName</small></td>
                                                    <td><small>@purchase.SeatCode</small></td>
                                                    <td class="text-end"><span class="fw-bold">€@purchase.Price.ToString("N2")</span></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Recent Drink Orders -->
                    @if (customerDetail.DrinkOrders?.Any() == true)
                    {
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-glass-martini me-2"></i>Recent Drink Orders</h6>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Order Date</th>
                                                <th>Seat</th>
                                                <th>Items</th>
                                                <th>Status</th>
                                                <th class="text-end">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in customerDetail.DrinkOrders.Take(5))
                                            {
                                                <tr>
                                                    <td><small>@order.OrderDate.ToString("MMM dd, yyyy")</small></td>
                                                    <td><small>@order.SeatNumber</small></td>
                                                    <td><small>@order.Items.Count items</small></td>
                                                    <td><small><span class="badge bg-info">@order.Status</span></small></td>
                                                    <td class="text-end"><span class="fw-bold">€@order.TotalAmount.ToString("N2")</span></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" @onclick="ExportCustomerData" disabled="@(isLoading || customerDetail == null)">
                    <i class="fas fa-download me-1"></i>Export Data
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

