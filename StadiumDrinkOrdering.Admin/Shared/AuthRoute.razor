@if (isChecking)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Checking authentication...</span>
            </div>
            <p class="text-muted">Verifying authentication...</p>
        </div>
    </div>
}
else if (AuthStateService.IsAuthenticated)
{
    @ChildContent
}
else
{
    @* Authentication check failed - redirecting to login automatically *@
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Redirecting to login...</span>
            </div>
            <p class="text-muted">Redirecting to login...</p>
        </div>
    </div>
}
