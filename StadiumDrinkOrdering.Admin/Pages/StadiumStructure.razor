@page "/admin/stadium-structure"
@using StadiumDrinkOrdering.Shared.DTOs
@using StadiumDrinkOrdering.Shared.Models
@using StadiumDrinkOrdering.Admin.Services

<PageTitle>Stadium Structure Management</PageTitle>

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h3 class="mb-0">üèüÔ∏è Stadium Structure Management</h3>
        <a href="/admin/structure-help" class="btn btn-outline-info">
            <i class="fas fa-question-circle me-2"></i>Import Guide & Samples
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Import Structure</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-info-circle me-2 mt-1"></i>
                            <div>
                                <strong>Quick Start:</strong>
                                <ul class="mb-0 small mt-1">
                                    <li>JSON file must contain stadium name and tribunes</li>
                                    <li>Tribune codes: N, S, E, W (North, South, East, West)</li>
                                    <li>Each sector needs rows and seatsPerRow values</li>
                                </ul>
                                <a href="/admin/structure-help" class="btn btn-sm btn-outline-primary mt-2">
                                    <i class="fas fa-external-link-alt me-1"></i>View Complete Guide & Samples
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Select JSON file:</label>
                        <InputFile OnChange="@HandleFileSelected" 
                                  accept=".json" 
                                  class="form-control" />
                        @if (selectedFileName != null)
                        {
                            <div class="form-text text-success">Selected: @selectedFileName</div>
                        }
                    </div>
                    
                    @if (!string.IsNullOrEmpty(importError))
                    {
                        <div class="alert alert-danger">
                            <strong>Import Error:</strong> @importError
                        </div>
                    }
                    
                    <div class="alert alert-warning">
                        <strong>‚ö†Ô∏è Warning:</strong> Import will replace the existing stadium structure!
                    </div>
                    
                    <button type="button" 
                            class="btn btn-primary" 
                            disabled="@(selectedFile == null || isImporting)"
                            @onclick="ImportStructure"
                            id="admin-stadium-import-btn">
                        @if (isImporting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <text>Importing</text>
                        }
                        else
                        {
                            <i class="fas fa-upload me-2"></i>
                            <text>Import Structure</text>
                        }
                    </button>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Current Structure</h5>
                </div>
                <div class="card-body">
                    @if (summary != null)
                    {
                        <div class="row">
                            <div class="col-sm-6"><strong>Tribunes:</strong></div>
                            <div class="col-sm-6">@summary.TotalTribunes</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6"><strong>Rings:</strong></div>
                            <div class="col-sm-6">@summary.TotalRings</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6"><strong>Sectors:</strong></div>
                            <div class="col-sm-6">@summary.TotalSectors</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6"><strong>Total Seats:</strong></div>
                            <div class="col-sm-6"><span class="badge bg-primary">@summary.TotalSeats</span></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6"><strong>Available:</strong></div>
                            <div class="col-sm-6"><span class="badge bg-success">@summary.AvailableSeats</span></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6"><strong>Occupied:</strong></div>
                            <div class="col-sm-6"><span class="badge bg-warning">@summary.OccupiedSeats</span></div>
                        </div>
                    }
                    else if (isLoadingSummary)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">No structure data available</div>
                    }
                    
                    <div class="mt-3">
                        <button class="btn btn-outline-danger me-2" 
                                @onclick="ShowClearConfirmation"
                                disabled="@(summary == null || summary.TotalSeats == 0)"
                                id="admin-stadium-clear-btn">
                            <i class="fas fa-trash me-2"></i>Clear Structure
                        </button>
                        
                        <button class="btn btn-outline-secondary"
                                @onclick="ExportStructure" 
                                disabled="@(summary == null || summary.TotalSeats == 0 || isExporting)"
                                id="admin-stadium-export-btn">
                            @if (isExporting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <text>Exporting</text>
                            }
                            else
                            {
                                <i class="fas fa-download me-2"></i><text>Export JSON</text>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (importSuccess)
    {
        <div class="alert alert-success alert-dismissible">
            <h5>‚úÖ Import Successful!</h5>
            <p>Stadium structure has been imported successfully. @importMessage</p>
            <button type="button" class="btn-close" @onclick="() => importSuccess = false" id="admin-stadium-success-close-btn"></button>
        </div>
    }
</div>

<!-- Clear Confirmation Modal -->
@if (showClearModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">‚ö†Ô∏è Confirm Deletion</h5>
                    <button type="button" class="btn-close" @onclick="HideClearConfirmation" id="admin-stadium-clear-modal-close-btn"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the entire stadium structure?</p>
                    <p class="text-danger"><strong>This action cannot be undone!</strong></p>
                    @if (summary != null)
                    {
                        <div class="alert alert-info">
                            This will remove <strong>@summary.TotalSeats seats</strong> across 
                            <strong>@summary.TotalSectors sectors</strong> in 
                            <strong>@summary.TotalTribunes tribunes</strong>.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideClearConfirmation" id="admin-stadium-clear-cancel-btn">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ClearStructure" disabled="@isClearing" id="admin-stadium-clear-confirm-btn">
                        @if (isClearing)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <text>Deleting</text>
                        }
                        else
                        {
                            <i class="fas fa-trash me-2"></i><text>Delete Structure</text>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

