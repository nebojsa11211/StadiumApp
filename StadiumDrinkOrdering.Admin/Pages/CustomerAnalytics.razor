@page "/customer-analytics"
@using StadiumDrinkOrdering.Shared.DTOs
@using StadiumDrinkOrdering.Admin.Services
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Customer Analytics</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">
                <i class="fas fa-users me-2"></i>Customer Analytics
            </h2>
            <p class="text-muted">View and analyze customer purchasing behavior and spending patterns</p>
        </div>
    </div>

    @if (isLoading && customers?.Any() != true)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading customer analytics...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @errorMessage
            <button type="button" class="btn btn-sm btn-outline-danger ms-2" @onclick="LoadCustomerAnalytics">
                <i class="fas fa-redo me-1"></i>Retry
            </button>
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        @if (summary != null)
        {
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card bg-primary text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                                <div>
                                    <div class="fs-4 fw-bold">@summary.TotalCustomers</div>
                                    <div class="small">Total Customers</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card bg-success text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-euro-sign fa-2x"></i>
                                </div>
                                <div>
                                    <div class="fs-4 fw-bold">€@summary.TotalRevenue.ToString("N0")</div>
                                    <div class="small">Total Revenue</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card bg-info text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-chart-line fa-2x"></i>
                                </div>
                                <div>
                                    <div class="fs-4 fw-bold">€@summary.AverageCustomerValue.ToString("N0")</div>
                                    <div class="small">Avg Customer Value</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card bg-warning text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-fire fa-2x"></i>
                                </div>
                                <div>
                                    <div class="fs-4 fw-bold">@summary.ActiveCustomersLast30Days</div>
                                    <div class="small">Active Last 30 Days</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Filters and Search -->
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>Filters & Search
                    </h5>
                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse">
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>
            </div>
            <div class="collapse show" id="filtersCollapse">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Search Customer</label>
                            <input type="text" class="form-control" placeholder="Search by name or email..." 
                                   @bind="currentFilter.SearchTerm" @onkeypress="OnSearchKeyPress" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Min Spent (€)</label>
                            <input type="number" class="form-control" placeholder="0" @bind="currentFilter.MinSpent" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Max Spent (€)</label>
                            <input type="number" class="form-control" placeholder="10000" @bind="currentFilter.MaxSpent" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Sort By</label>
                            <select class="form-select" @bind="currentFilter.SortBy">
                                <option value="@CustomerSortBy.TotalSpent">Total Spent</option>
                                <option value="@CustomerSortBy.CustomerName">Customer Name</option>
                                <option value="@CustomerSortBy.TicketsPurchased">Tickets Purchased</option>
                                <option value="@CustomerSortBy.LastPurchaseDate">Last Purchase</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Order</label>
                            <select class="form-select" @bind="currentFilter.SortDescending">
                                <option value="true">Descending</option>
                                <option value="false">Ascending</option>
                            </select>
                        </div>
                    </div>
                    <div class="row g-3 mt-2">
                        <div class="col-12">
                            <button class="btn btn-primary me-2" @onclick="ApplyFilters" disabled="@isLoading">
                                <i class="fas fa-search me-1"></i>Apply Filters
                            </button>
                            <button class="btn btn-outline-secondary me-2" @onclick="ClearFilters" disabled="@isLoading">
                                <i class="fas fa-times me-1"></i>Clear
                            </button>
                            <button class="btn btn-outline-success" @onclick="ExportData" disabled="@(isLoading || customers?.Any() != true)">
                                <i class="fas fa-download me-1"></i>Export CSV
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer List -->
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>Customer List
                        @if (pagedResult != null)
                        {
                            <span class="badge bg-secondary ms-2">@pagedResult.TotalCount total</span>
                        }
                    </h5>
                    <div class="d-flex align-items-center">
                        <label class="form-label me-2 mb-0">Show:</label>
                        <select class="form-select form-select-sm" style="width: 80px;" @onchange="OnPageSizeChanged">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                @if (customers?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Customer</th>
                                    <th class="text-end">Total Spent</th>
                                    <th class="text-center">Tickets</th>
                                    <th class="text-center">Events</th>
                                    <th class="text-center">Avg/Transaction</th>
                                    <th class="text-center">Last Purchase</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in customers)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <div class="fw-bold">@customer.CustomerName</div>
                                                <div class="text-muted small">@customer.CustomerEmail</div>
                                                @if (!string.IsNullOrEmpty(customer.CustomerPhone))
                                                {
                                                    <div class="text-muted small">@customer.CustomerPhone</div>
                                                }
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <div class="fw-bold text-success">€@customer.TotalSpent.ToString("N2")</div>
                                            <div class="small text-muted">
                                                Tickets: €@customer.TicketSpending.ToString("N0") | 
                                                Drinks: €@customer.DrinkSpending.ToString("N0")
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@customer.TotalTicketsPurchased</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info">@customer.TotalEventsAttended</span>
                                        </td>
                                        <td class="text-center">
                                            €@customer.AverageSpendPerTransaction.ToString("N2")
                                        </td>
                                        <td class="text-center">
                                            <small>@customer.LastPurchaseDate.ToString("MMM dd, yyyy")</small>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewCustomerDetails(customer.CustomerEmail)">
                                                <i class="fas fa-eye me-1"></i>Details
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (pagedResult != null && pagedResult.TotalPages > 1)
                    {
                        <div class="card-footer">
                            <nav aria-label="Customer pagination">
                                <ul class="pagination justify-content-center mb-0">
                                    <li class="page-item @(pagedResult.Page == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(pagedResult.Page - 1)" disabled="@(pagedResult.Page == 1 || isLoading)">
                                            <i class="fas fa-chevron-left"></i>
                                        </button>
                                    </li>
                                    
                                    @for (int i = Math.Max(1, pagedResult.Page - 2); i <= Math.Min(pagedResult.TotalPages, pagedResult.Page + 2); i++)
                                    {
                                        <li class="page-item @(i == pagedResult.Page ? "active" : "")">
                                            <button class="page-link" @onclick="() => GoToPage(i)" disabled="@isLoading">@i</button>
                                        </li>
                                    }
                                    
                                    <li class="page-item @(pagedResult.Page == pagedResult.TotalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(pagedResult.Page + 1)" disabled="@(pagedResult.Page == pagedResult.TotalPages || isLoading)">
                                            <i class="fas fa-chevron-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                            <div class="text-center text-muted small mt-2">
                                Showing @((pagedResult.Page - 1) * pagedResult.PageSize + 1) to @Math.Min(pagedResult.Page * pagedResult.PageSize, pagedResult.TotalCount) of @pagedResult.TotalCount customers
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No customers found matching your criteria</p>
                        <button class="btn btn-outline-primary" @onclick="ClearFilters">
                            <i class="fas fa-times me-1"></i>Clear Filters
                        </button>
                    </div>
                }
            </div>
        </div>
    }
</div>

